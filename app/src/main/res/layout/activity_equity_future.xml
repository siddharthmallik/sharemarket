<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:background="#F18D24"
        android:layout_height="48dp"
        android:padding="4dp"
        android:layout_width="match_parent">
        <ImageView
            android:id="@+id/imgequityfuture"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_arrow_back"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
        <TextView
            android:text="Equity Future"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textColor="@color/primaryTextColor"
            android:layout_weight="1"
            android:textSize="16dp"
            android:textStyle="bold"
            android:gravity="center" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:id="@+id/searchGlass"
            android:src="@drawable/search_glass"/>
        <LinearLayout
            android:layout_height="24dp"
            android:layout_width="24dp" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <TextView
                android:text="TE-EQUITY AND STOCK FUTRE Package we provide you excellent EQUITY CASH and STOCK FUTURES calls with a high level of accuracy. This service is basically for EQUITY and F&amp;O Traders. Deep research and strong predictions made by our research team in order to give stock future tips for our new and old clients makes sure that you make huge profits through your investments. All the calls are mostly intraday. Huge profits are earned every month. Accuracy level is maintained to 90-95%."
                android:textColor="@android:color/black"
                android:textSize="14dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                tools:ignore="HardcodedText" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="12dp"
                android:layout_marginTop="8dp"
                android:text="What you Get?"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="12dp"
                android:layout_marginTop="8dp"
                android:text="In this pack we will provide you 2-3 calls in in Stock Future a daily basis."

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"
                android:textSize="12dp"
                android:text="Each call consist of 3 targets and 1 Stop Loss."
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="12dp"
                android:layout_marginTop="8dp"
                android:text="Buy above and Sale below strategy follows."
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="12dp"
                android:layout_marginTop="8dp"
                android:text="Nifty Review, Resistance and Support."
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="10dp"
                android:layout_marginTop="8dp"
                android:text="Complete Support On Whatsapp and Direct Mobile Number will be provided."
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:layout_marginTop="8dp"
                android:text="Medium of Calls:"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="12dp"
                android:layout_marginTop="8dp"
                android:text="Calls Will Be Given Only On SMS and WhatsApp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:layout_marginTop="8dp"
                android:text="Profits:"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="12dp"
                android:layout_marginTop="8dp"
                android:text="In this package we provide huge profits every month on consistent basis. Our subscribers earn approx. Rs.80000-1 lac every month and sometime profits rise to 2-4 lac if market co-operate."
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:layout_marginTop="8dp"
                android:text="Package Price:"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="12dp"
                android:layout_marginTop="8dp"
                android:text="Rs 5,999 for 1 Month \n Rs 26,999 for 6 Month (Save Upto Rs9,000)25% \n Rs 43,200 for 1 Year (Save Upto Rs28,800)40%"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>