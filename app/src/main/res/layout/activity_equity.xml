                android:textSize="16dp"
                android:id="@+id/equitycash"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:id="@+id/tvequ2"
                android:layout_marginTop="8dp"
                android:text="What you Get?"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:layout_marginTop="8dp"
                android:id="@+id/tvequpack"

                android:text="In this pack we will provide you 2-4 calls in a day."

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"
                android:textSize="16dp"
                android:id="@+id/tvequtargets"
                android:text="Each call consist of 3 targets and 1 Stop Loss."
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:layout_marginTop="8dp"
                android:text="Buy above and Sale below strategy follows."
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:layout_marginTop="8dp"
                android:text="Nifty Review, Resistance and Support."
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:layout_marginTop="8dp"
                android:text="Complete Support On Whatsapp and Direct Mobile Number will be provided."
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:layout_marginTop="8dp"
                android:text="Medium of Calls:"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="12dp"
                android:layout_marginTop="8dp"
                android:text="Calls Will Be Given Only On SMS and WhatsApp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:layout_marginTop="8dp"
                android:text="Profits:"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="12dp"
                android:layout_marginTop="8dp"
                android:text="In this package we provide assured daily profits on consistent basis. Our subscribers earns approx. Rs.1000-Rs.4000 daily on Trading amount of Rs.50,000. Investment Amount Suggested: Rs. 50,000"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:layout_marginTop="8dp"
                android:text="Profits:"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:layout_marginTop="8dp"
                android:text="Package Price:"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:layout_marginTop="8dp"
                android:text="Rs 4,500 for 1 Month \n Rs 11,475 for 3 Month (Save Upto Rs2,025)15% \n Rs 20,250 for 6 Month (Save Upto Rs6,750)25% \n Rs 32,400 for 1 Year (Save Upto Rs21,600)40%"
